{
    "extends": [
        "eslint:recommended",
        "plugin:import/errors"
    ],
    "plugins": [
        "import"
    ],
    "rules": {
        "max-len": [
            "warn",
            {
                "code": 90,
                "ignoreStrings": true,
                "ignoreTemplateLiterals": true,
                "ignoreComments": true
            }
        ],
        "react/prop-types": 0,
        "indent": [
            "warn",
            4
        ],
        "linebreak-style": 0,
        "quotes": [
            "warn",
            "double"
        ]
    },
    "parserOptions": {
        "ecmaVersion": 2021,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "env": {
        "es6": true,
        "browser": true,
        "node": true
    }
}